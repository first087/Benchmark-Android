<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewRound"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:padding="@dimen/space_tiny"
        android:text="@string/round" />

    <TextView
        android:id="@+id/textViewChoice1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:padding="@dimen/space_tiny"
        android:text="@string/choice1" />

    <TextView
        android:id="@+id/textViewChoice2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:padding="@dimen/space_tiny"
        android:text="@string/choice2" />

    <TextView
        android:id="@+id/textViewChoice3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:padding="@dimen/space_tiny"
        android:text="@string/choice3"
        android:visibility="gone" />
</LinearLayout>